<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
      body {
        background: #f0f2f5;
        font-family: 'Poppins', sans-serif;
      }
      .profile-header {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
      }
      .profile-header img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
        object-fit: cover;
      }
      .profile-header h1 {
        font-size: 24px;
        margin-top: 10px;
      }
      .profile-header p {
        color: #666;
      }
      .profile-content {
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .profile-content h2 {
        font-size: 20px;
        margin-bottom: 20px;
      }
      .profile-content .info-group {
        margin-bottom: 15px;
      }
      .profile-content .info-group label {
        font-weight: bold;
        color: #333;
      }
      .profile-content .info-group p {
        color: #666;
        margin: 0;
      }
      .btn-primary {
        background-color: #1877f2;
        border-color: #1877f2;
      }
      .btn-primary:hover {
        background-color: #165dbb;
        border-color: #165dbb;
      }
      .btn-danger {
        background-color: #e53935;
        border-color: #e53935;
      }
      .btn-danger:hover {
        background-color: #d32f2f;
        border-color: #d32f2f;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
        <div class="profile-header text-center">
            <% if (user.photo) { %>
                <img src="/uploads/<%= user.photo %>" alt="User Photo">
            <% } else { %>
                <img src="https://via.placeholder.com/150" alt="User Photo">
            <% } %>
            <h1><%= user.name %></h1>
            <p><%= user.email %></p>
        </div>
        <div class="profile-content">
            <h2>Profile Information</h2>
            <div class="info-group">
                <label>Age:</label>
                <p><%= user.age %></p>
            </div>
            <div class="info-group">
                <label>Educational Institution:</label>
                <p><%= user.institution %></p>
            </div>
            <div class="info-group">
                <label>Gender:</label>
                <p><%= user.gender %></p>
            </div>
            <div class="info-group">
                <label>Address:</label>
                <p><%= user.address %></p>
            </div>
            <div class="info-group">
                <label>Mobile Number:</label>
                <p><%= user.mobile %></p>
            </div>
            <a href="/user/panel" class="btn btn-primary">Edit Profile</a>
            <a href="/user/delete" class="btn btn-danger">Delete Account</a>
            <a href="/" class="btn btn-primary">Home</a>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
